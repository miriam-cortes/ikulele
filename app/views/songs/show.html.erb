<%# app/views/songs/show.html.erb %>
<% if @song != nil %>
  <div id="song" class="small-12 columns">
    <h3 class="skinny-font"><%= link_to @song.artist.name, artist_path(@song.artist.id) %></h3>

    <div class="song_holder">
      <!-- <h3 class="small-1 columns favorite centered clickable" id="favorite"><%#= @my_favorite %> </h3> -->
      <h3 class="cursive-font small-7 columns"><%= @song.name %></h3>
      <h3 id="play" class="small-1 columns skinny-font clickable">Play</h3>
      <h3 id="stop" class="small-1 columns skinny-font clickable">Stop</h3>
      <h3 id="faster" class="small-1 columns skinny-font clickable">Faster</h3>
      <h3 id="slower" class="small-1 columns skinny-font clickable">Slower</h3>

      <div class="tabs small-8 large-8 columns">
        <% @song.lyrics_tabs.split("|").each do |line| %>
          <p class="line"><%= line %></p>
        <% end %>
      </div>

      <div class="chords small-4 large-4 columns">
        <% @song.sticky_tabs.split(" ").each do |chord| %>
          <div class="small-6 medium-4 large-4 columns ">
            <%= image_tag("#{chord}.png") %>
          </div>
        <% end %>
      </div>

    </div>
    <%#= react_component 'Song', { songData: @song, favoriteData: @my_favorite, userData: current_user } %>

  </div>
<% end %>

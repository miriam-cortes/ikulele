<%# app/views/songs/show.html.erb %>

<div id="song">
  <%= render 'songs/show' %>
</div>








<!-- parsed song -->
<div class="row">
  <p class="tabs small-7 large-8 columns">
    <%# (@song.lyrics_tabs.split("|")).each do |element| %>
      <%# if element == "br" %>
        <br />
      <%# elsif element == "a" %>
        <%#= element %>
      <%# else %>
        <%#= element %>
      <%# end %>
    <%# end %>
  </p>

<!-- this is the tab pictures -->
  <div class="chords-div small-4 large-4 columns">
    <%# ( @song.sticky_tabs.split(",") ).each do |chord| %>
      <section class="chord small-6 medium-6 columns">
        <h2 class="cursive-font"><%#= chord %></h2>
      </section>
    <%# end %>
  </div>
</div>
